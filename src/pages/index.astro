---
const notes = import.meta.glob('./notes/**/*.md', { eager: true });
const entries = Object.entries(notes)
  .map(([path, mod]) => {
    return {
      url: path.replace('./', '/').replace('.md', ''),
      title: mod.frontmatter?.title ?? path,
    };
  })
  .sort((a, b) => a.url < b.url ? 1 : -1);
---

<h1>Thinking Lab</h1>

<h2>Notes</h2>
<ul>
  {entries.map(entry => (
    <li>
      <a href={entry.url}>{entry.title}</a>
    </li>
  ))}
</ul>
